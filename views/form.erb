<form action="/" method="get">

  <div class="form-inline">
    
    <div class="form-group">
      <label for="min_travel">min travel</label>
      <input class="form-control" type="text" name="min_travel" id="min_travel" value="<%= params[:min_travel] %>" />
    </div>
    
    <div class="form-group">
      <label for="max_travel">max travel</label>
      <input class="form-control" type="text" name="max_travel" id="max_travel" value="<%= params[:max_travel] %>" />
    </div>

    <div class="form-group">
      <label for="min_price">min price</label>
      <input class="form-control" type="text" name="min_price" id="min_price" value="<%= params[:min_price] %>"/>
    </div>

    <div class="form-group">
      <label for="max_price">max price</label>
      <input class="form-control" type="text" name="max_price" id="max_price" value="<%= params[:max_price] %>" />
    </div>

  </div>

  <div class="checkbox">
    <% %w[XS S M L XL].each do |size| %>
      <label>
        <input type="checkbox" name="sizes[]" value="<%= size %>" <%= "checked" if params[:sizes]&.include? size %>/>
        <%= size %>
      </label>
    <% end %>
  </div>

  <select name="brand_id" id="brand-select" class="chosen">
    <%# TODO improve the default option UX%>
    <%#also giving default option twice now%>
    <option value="">None</option>
    <option value="<%= params[:brand_id] %>"><%= Brand.find_by(id: params[:brand_id])&.name || "Todos" %></option>
    <% @brands.each do |b| %>
    <option value="<%= b.id %>"><%= b.name %></option>
    <% end %>
  </select>

  <select name="model_id" id="model-select" class="chosen" disabled>
  </select>

  <input type="submit" name="submit" id="submit-button" value="submit" />

</form>
